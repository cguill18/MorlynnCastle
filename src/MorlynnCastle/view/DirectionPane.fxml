<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Button?>

<GridPane fx:id="directionPane" prefHeight="100.0" prefWidth="125.0"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml/1"
>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" fillWidth="true"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" fillWidth="true"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" fillWidth="true"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints  fillHeight="true" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints fillHeight="true" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints fillHeight="true" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Button fx:id="upButton" mnemonicParsing="false" text="up" GridPane.columnIndex="1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"/>
        <Button fx:id="leftButton" mnemonicParsing="false" text="left" GridPane.rowIndex="1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"/>
        <Button fx:id="rightButton" mnemonicParsing="false" text="right" GridPane.columnIndex="2"
                GridPane.rowIndex="1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"/>
        <Button fx:id="bottomButton" mnemonicParsing="false" text="bottom" GridPane.columnIndex="1"
                GridPane.rowIndex="2" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"/>
    </children>
</GridPane>
